{
  "name": "@lifeomic/alpha",
  "version": "3.0.0",
  "description": "Unified client for HTTP services.",
  "main": "src/Alpha.js",
  "types": "src/Alpha.d.ts",
  "author": "LifeOmic <development@lifeomic.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "files": [
    "src/**/*.d.ts",
    "src/**/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lifeomic/alpha.git"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > ./.nyc_output/lcov.info",
    "buildGrammar": "nearleyc src/adapters/helpers/lambdaURL.ne -o src/adapters/helpers/lambdaURLGrammar.js",
    "lint": "eslint .",
    "postlint": "yarn tsc",
    "lint:fix": "eslint --fix .",
    "prepare": "yarn buildGrammar",
    "pretest": "yarn buildGrammar && yarn lint",
    "test": "nyc ava",
    "prepublishOnly": "yarn clean && yarn prepare && yarn tsc -p tsconfig.build.json",
    "clean": "yarn tsc --build --clean"
  },
  "ava": {
    "verbose": true,
    "extensions": [
      "js",
      "ts"
    ],
    "files": [
      "test/**/*.test.[jt]s"
    ],
    "require": [
      "ts-node/register",
      "./test/setup.js"
    ],
    "timeout": "30s"
  },
  "eslintConfig": {
    "extends": "plugin:@lifeomic/node/recommended"
  },
  "eslintIgnore": [
    "/lib/",
    "src/adapters/helpers/lambdaURLGrammar.js"
  ],
  "nyc": {
    "check-coverage": true,
    "exclude": [
      "src/adapters/helpers/lambdaURLGrammar.js"
    ],
    "include": [
      "src"
    ],
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@lifeomic/eslint-plugin-node": "^2.0.1",
    "@lifeomic/typescript-config": "^1.0.3",
    "@types/aws-lambda": "^8.10.93",
    "@types/node": "^14.14.25",
    "ava": "^3.15.0",
    "aws-sdk": "^2.1001.0",
    "aws-sdk-mock": "^4.0.0",
    "axios": "^0.26.1",
    "coveralls": "^3.1.0",
    "docker-lambda": "^0.15.3",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "nock": "^13.0.7",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.181",
    "@types/nearley": "^2.11.2",
    "@types/url-parse": "^1.4.8",
    "@types/uuid": "^8.3.4",
    "lodash": "^4.17.21",
    "nearley": "2",
    "resolve-pathname": "^3.0.0",
    "url-parse": "^1.5.10",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "aws-sdk": ">=2.1001.0",
    "axios": "<= 0.26.1 & >=0.24",
    "docker-lambda": "^0.15.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
